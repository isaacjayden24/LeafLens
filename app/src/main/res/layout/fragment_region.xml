<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screen.RegionFragment"
    android:background="@color/light_green"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/originalImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333"
        app:navigationIcon="@drawable/baseline_keyboard_arrow_left_24"
        app:title="RESULT"
        app:titleCentered="true"
        app:titleTextColor="@color/dark_green"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/originalImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="82dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder" />




    <ImageView
        android:id="@+id/processedImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/originalImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="267dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder" />
</RelativeLayout>
